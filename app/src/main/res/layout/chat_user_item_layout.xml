<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chat_userProfileImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:id="@+id/chatMessageContainer_constraintLayout"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="16"
            android:text="@string/username"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--ImageView
                android:id="@+id/chatIcon_imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:padding="0dp"
                android:scaleX="-1"
                android:layout_margin="0dp"
                android:background="@drawable/ic_chat_cyan"
                /-->

            <TextView
                android:id="@+id/chat_lastActionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:text="@string/tap_to_chat"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>